@model gestionaMelon.garantia

@{
    ViewBag.Title = "Details";
}

@*<h2>Details</h2>*@

<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Detalles</h4>
    </div> 

    @*<h4>garantia</h4>
	<hr />*@
    <dl class="dl-horizontal">

        <dt>   @Html.DisplayNameFor(model => model.vista.alumno1.nombre)  </dt>

        <dd>  @Html.DisplayFor(model => model.vista.alumno1.nombre) </dd>

        <dt>   @Html.DisplayNameFor(model => model.vista.alumno1.apellido)  </dt>

        <dd>  @Html.DisplayFor(model => model.vista.alumno1.apellido) </dd>

        <dt>   @Html.DisplayNameFor(model => model.comentarios)</dt>

        <dd> @Html.DisplayFor(model => model.comentarios) </dd>

        <dt> @Html.DisplayNameFor(model => model.fechaIngreso) </dt>

        <dd>  @Html.DisplayFor(model => model.fechaIngreso)</dd>

        <dt>  @Html.DisplayNameFor(model => model.ticket) </dt>

        <dd>    @Html.DisplayFor(model => model.ticket) </dd>

        <dt>   @Html.DisplayNameFor(model => model.flagRetirada) </dt>

        <dd>
            @*@Html.DisplayFor(model => model.flagRetirada)*@
            @if (Model.flagRetirada.GetValueOrDefault())
            {<text>Si</text>}
            else
            {<text>No</text>}
        </dd>

        <dt> @Html.DisplayNameFor(model => model.fechaRetirada) </dt>

        <dd>  @Html.DisplayFor(model => model.fechaRetirada) </dd>

        <dt>  @Html.DisplayNameFor(model => model.flagVuelta) </dt>

        <dd>
            @*@Html.DisplayFor(model => model.flagVuelta)*@
            @if (Model.flagVuelta.GetValueOrDefault())
            {<text>Si</text>}
            else
            {<text>No</text>}
        </dd>

        <dt>  @Html.DisplayNameFor(model => model.fechaVuelta)</dt>

        <dd> @Html.DisplayFor(model => model.fechaVuelta) </dd>

        <dt>  @Html.DisplayNameFor(model => model.estadoGarantia1.descripcion)</dt>

        <dd>  @Html.DisplayFor(model => model.estadoGarantia1.descripcion)</dd>

        <dt>  @Html.DisplayNameFor(model => model.vista.alumno1.netbook.ndeserie)</dt>

        <dd>  @Html.DisplayFor(model => model.vista.alumno1.netbook.ndeserie)  </dd>

        <dt> @Html.DisplayNameFor(model => model.problema1.descripcion)</dt>

        <dd> @Html.DisplayFor(model => model.problema1.descripcion)</dd>
    </dl>

    @if (User.IsInRole("Admin")) // muestra el menu solo si es usuario Admin
    {
        <div class="col-md-4 col-md-offset-3">
            @Html.ActionLink("Editar | ", "Edit", new { id = Model.idGarantia }, new { vieneDe = "modalDetallesVista" })
            @Html.ActionLink("Volvio", "Vuelta", new { id = Model.idGarantia })
            @Html.ActionLink("Retirada", "Retirada", new { id = Model.idGarantia })
        </div>
    }   
</div>
<hr />




