@model gestionaMelon.vista_usuario_reclamo    




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Escriba su comentario o reclamo</h4>
        <hr />
        @*ID vista @ViewBag.id_vista
        Username  @ViewBag.user
        Id @ViewBag.id_usuario*@ 
        
        @Html.ValidationSummary(true)

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.id_usuario, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("id_usuario", (string)ViewBag.id_usuario, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_usuario)
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.id_vista, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.id_vista, new { @class = "form-control", disabled = "true" })
                @Html.ValidationMessageFor(model => model.id_vista)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.reclamo.descripcion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.reclamo.descripcion, 10, 5, new { @class = "form-control", style = "width: 50%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.reclamo.descripcion )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-primary btn-lg btn-block" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ir a todos Mis Reclamos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


